= content_for :head do
  = javascript_include_tag "application"
  :javascript
    window.project_id = "#{project.id}";

= content_for :project do
  %h2= project.name
  %nav.project_nav
    = link_to "Edit Project", edit_project_path(current_user.username, project.name)

#project
  %section#editor_border
  %section#editor(contenteditable="true" spellcheck="false")
  %section#tasks
    %ul
  %section#notes
    .note_container
      %ul.notes
    %form.new_note
      %fieldset
        %textarea#note_text(placeholder="Note...")
      %fieldset.actions
        %input(type="submit" value="Add note")
